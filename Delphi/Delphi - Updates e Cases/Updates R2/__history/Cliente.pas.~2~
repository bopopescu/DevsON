unit Cliente;

interface
type
  TCliente = class
    Nome : String;
    Telefone : String;
    Endereco : String;
    Cidade : String;
    public
    constructor Create;
    procedure CadastrarClientePOO;
  end;

implementation

{ TCliente }



{ TCliente }

procedure TCliente.CadastrarClientePOO;
var
  Lista: TStringList;
begin
  Lista := TStringList.Create;
  try
    Lista := TStringList.Create;
    Lista.Add('Nome: ' + Value.Nome);
    Lista.Add('Telefone: ' + Value.Telefone);
    Lista.Add('Endereço: ' + Value.Endereco);
    Lista.Add('Cidade: ' + Value.Cidade);
    Lista.SaveToFile('Cliente.txt');
  finally
    Lista.Free;
  end;
end;

end.
